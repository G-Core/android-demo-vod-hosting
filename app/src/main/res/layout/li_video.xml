<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/li_video_background"
    android:layout_marginBottom="8dp"
    android:paddingTop="6dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="6dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/videoPreview"
        android:layout_width="104dp"
        android:layout_height="78dp"
        android:scaleType="centerCrop"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        tools:src="@tools:sample/backgrounds/scenic"/>

    <TextView
        android:id="@+id/id_video_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="1dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:background="@drawable/background_id_video"
        app:layout_constraintTop_toTopOf="@id/videoPreview"
        app:layout_constraintStart_toStartOf="@id/videoPreview"
        tools:text="134132"/>

    <TextView
        android:id="@+id/duration_video_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="1dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:background="@drawable/background_duration_video"
        app:layout_constraintEnd_toEndOf="@+id/videoPreview"
        app:layout_constraintBottom_toBottomOf="@+id/videoPreview"
        tools:text="134132"/>

    <TextView
        android:id="@+id/videoNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/videoPreview"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Some Texd"/>

    <TextView
        android:id="@+id/videoSizeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/dark_white"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/videoNameTextView"
        app:layout_constraintStart_toEndOf="@+id/videoPreview"
        tools:text="adsfadsf"/>

</androidx.constraintlayout.widget.ConstraintLayout>